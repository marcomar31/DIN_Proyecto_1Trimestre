<Window x:Class="Proyecto_Final.GestionClientes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Final"
        mc:Ignorable="d"
        Title="GestionClientes" Height="450" Width="800"
        ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="/necesito-unas-imagenes-muy-similares-pero-variadas-para-utilizar-para-el-fondo-de-mi-aplicacin-de-a-295184676 (1).png" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <ListView x:Name="lvClientes" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="35,35,271,117">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding nombre}" Width="100"/>
                    <GridViewColumn Header="Primer Apellido" DisplayMemberBinding="{Binding apellido1}" Width="120"/>
                    <GridViewColumn Header="Segundo Apellido" DisplayMemberBinding="{Binding apellido2}" Width="120"/>
                    <GridViewColumn Header="Estado Viaje" DisplayMemberBinding="{Binding estadoViaje}" Width="140"/>
                    <GridViewColumn Header="Dado de alta" DisplayMemberBinding="{Binding dadoAlta}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btnAniadirCliente" Content="Añadir cliente" HorizontalAlignment="Left" Margin="35,345,0,0" VerticalAlignment="Top" Height="34" Width="121" Click="btnAniadirCliente_Click"/>
        <Button x:Name="btnEditarCliente" Content="Editar cliente" HorizontalAlignment="Left" Margin="222,345,0,0" VerticalAlignment="Top" Height="34" Width="120"/>
        <Button x:Name="btnEliminarCliente" Content="Eliminar cliente" HorizontalAlignment="Left" Margin="409,345,0,0" VerticalAlignment="Top" Height="34" Width="120"/>
    </Grid>
</Window>
